#EJERCICIO 01------------------------------------------------------------------#EJERCICIO 01-----------------------------------------------------------------------------------------------------
n = 5
#usando rango
suma = 0 
for x in range(1, n + 1):
    suma += x
    print(suma)

#EJERCICIO 02------------------------------------------------------------------#EJERCICIO 02-----------------------------------------------------------------------------------------------------
lista = []
n = int(input("¿cuantos numeros deseas sumar?"))
i = 1 
while i <= n :
    num = int(input("ingrese un numero: "))
    lista.append(num)
    i+=1
suma = 0
x= 0
while x<len(lista):
    if lista[x] % 2 == 1:
        suma += lista[x]
    x += 1
print(f"la suma es:{suma}")


#EJERCICIO 03------------------------------------------------------------------#EJERCICIO 03-----------------------------------------------------------------------------------------------------
print ( "INGRESA UN NUMERO:")
n = int(input())
fact = 1 
for i in range(1, n+1):
    fact*=i
print("El factorial de ",n, "es: ",fact,)


#EJERCICIO 04------------------------------------------------------------------#EJERCICIO 04-----------------------------------------------------------------------------------------------------
def fibonacci(n):
    if n == 0:
        return 0
    if n == 1 or n == 2:
        return 1
    else:
        return fibonacci (n-1) + fibonacci(n - 2)
print (fibonacci(10))

