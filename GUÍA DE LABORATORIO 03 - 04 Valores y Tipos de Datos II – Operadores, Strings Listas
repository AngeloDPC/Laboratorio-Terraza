#EJERCICIO 09------------------------------------------------------------------------#EJERCICIO 09-------------------------------------------------------------------------------------------------
alfabeto = "ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
frase = input("Ingrese la palabra o oración: ")
clave = 1
cifrado = " "

for letra in frase.upper():
    if letra in alfabeto:
        indice = alfabeto.find(letra)
        indice += clave
        if indice >= 27:
            indice -= 27
        cifrado += alfabeto[indice]
    else:
        cifrado += letra
print(cifrado)


#EJERCICIO 10------------------------------------------------------------------------#EJERCICIO 10-------------------------------------------------------------------------------------------------
palabra = input("Ingrese la palabra o frase: ").lower()
if palabra == palabra[::-1]:
    print("Es un polindromo")
else: 
    print("No es un polindromo")
